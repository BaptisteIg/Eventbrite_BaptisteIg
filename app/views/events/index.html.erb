<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-4">Events</h1>
  <p class="lead">Bienvenue sur le meilleurs site de présentation d'events, Eventbrite!</p>
  <hr class="my-4">
  <p>Si jamais tu as des propositions d'Events à nous faire, n'hésite pas! ;)</p>
  <%= link_to 'New Event', new_event_path, class: "btn btn-primary btn-lg" %>
</div>
  
  
  
<% @events.each do |event| %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2><%= event.title %></h2>
      <p>
        Start date : <%= event.start_date %></br>
        Duration : <%= event.duration %></br>
        Description : <%= event.description %></br>
        Price : <%= event.price %> €</br>
        Location : <%= event.location %>
      </p>
      <p> <%= link_to 'Show', event_path(event), class: "btn btn-secondary" %> 
      <%= link_to 'Edit', edit_event_path(event), class: "btn btn-outline-success" %> 
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %> </p>
    </div>
  </div>
</div>
<% end %>